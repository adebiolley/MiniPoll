<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="be.lsinf1225.minipoll.activity.CreationProfil">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_cre_pro"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:text="Création d'un profil"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/pp_cre_pro"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="113dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_name_cre_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom :"
                android:textColor="@color/colorWhite"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="288dp" />

            <EditText
                android:id="@+id/et_name_cre_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Entrez le nom"
                android:inputType="textPersonName"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="307dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_prename_cre_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prénom :"
                android:textColor="@color/colorWhite"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="397dp" />

            <EditText
                android:id="@+id/et_prename_cre_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Entrez le prénom"
                android:inputType="textPersonName"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="360dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/validate_cre_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S'inscrire"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="455dp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
